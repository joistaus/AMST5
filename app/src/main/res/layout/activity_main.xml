<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:fab_expandDirection="up"
        app:fab_labelStyle="@style/MenuLabelStyle"
        app:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToVideo"
            app:fab_colorNormal="#c034eb"
            app:fab_icon="@drawable/ic_video"
            app:fab_title="Vídeo" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToCalendar"
            app:fab_colorNormal="#FF5722"
            app:fab_icon="@drawable/ic_calendar"
            app:fab_title="Calendario" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToMap"
            app:fab_colorNormal="#4CAF50"
            app:fab_icon="@drawable/ic_map"
            app:fab_title="Mapa" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToGraphic"
            app:fab_colorNormal="#2196F3"
            app:fab_icon="@drawable/ic_graphic"
            app:fab_title="Gráfico Lineal" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>